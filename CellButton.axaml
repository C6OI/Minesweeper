<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Minesweeper.CellButton">
    
    <Button Name="Cell"
            Width="35" Height="35"
            CornerRadius="0"
            Focusable="False">
        
        <TextBlock Name="CellInfo"
                   IsVisible="False"
                   FontSize="16"
                   FontFamily="avares://Minesweeper/Assets/Pico-8.ttf#"/>
        
    </Button>
    
</UserControl>
